app.delete('/transactions/:id', (req, res) => {
    const { id } = req.params;
    const sql = `DELETE FROM transactions WHERE id = ?`;
    db.run(sql, id, function (err) {
        if (err) return res.status(500).json({ error: err.message });
        res.json({ message: `Transaction ${id} deleted.` });
    });
});
